template(name="emulatorLoginView")
	img.ui.small.centered.image(src="#{arquivoPath appInfo.appLogo}")
	.ui.hidden.divider
	form.ui.inverted.form(style="background-color:#{appThemeBgColor}", method="post")
		.field
			label #{appInfo.loginTitle}
			input#usernameField(type="tel",name="username",autocomplete="off")
		.field
			label Senha
			.ui.action.input
				input#passwordField.hidePwd(type="tel",name="password",autocomplete="off")
				.ui.icon.button.showPasswordBtn
					i.eye.icon
		.ui.divider
		button.ui.fluid.blue.button(type="button",form="loginForm") Entrar
