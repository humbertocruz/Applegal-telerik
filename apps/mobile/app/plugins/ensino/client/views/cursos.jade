template(name="ensinoView")
	.ui.info.message(style="background-color:#{appThemeBgColor}")
		i.large.student.icon
		|Ensino - Cursos
	unless Template.subscriptionsReady
		.ui.info.message(style="background-color:#{appThemeBgColor}")
			i.large.spinner.loading.icon
			|Carregando...
	else
		.ui.cards
				each cursos
					.ui.fluid.card(style="background-color:#{appThemeBgColor}")
						.content
							.header #{name}
							.meta 
								|Requisito:
								if cursoRequisito
									|#{cursoRequisito.name}
								else
									|Nenhum
						.extra.content
							a.ui.blue.button(href="#{pathFor 'turmasRoute' cursoId=_id}")
								i.sidebar.icon
								|Turmas
							
