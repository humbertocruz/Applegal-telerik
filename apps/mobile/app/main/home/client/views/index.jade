template(name="homeView")
	unless appInfo.home.appLogoHide
		img.ui.small.centered.image(src="#{clUrl appInfo.logotype.public_id cloud_name=appInfo.logotype.cloud_name crop='scale' width=150}")
	.ui.hidden.divider
	.ui.fluid.grid(class="#{appInfo.home.iconQuantity} column")
		each plugins
			.center.aligned.column.pluginClickEvent
				i.iconAlpha.inverted.transition.hidden.icon(style="background-color:#{iconRGBA} !important;",id="icon_#{_id}",class="#{plugin.icon} #{appInfo.home.iconSize} #{appInfo.home.iconColor} #{appInfo.home.iconType}")
