template(name="formGaleriasView")
	+indexHeaderSearch header=header saveLink=saveLink extraLinks=extraLinks
	form.ui.form#galeriasForm(method="post")
		.two.fields
			.field
				label Data
				input#dateField(type="date",name="date")
			.field
				label Título
				input#titleField(type="text",name="title")
	if galeria_id
		.ui.divider
		.ui.segment.galerias.dropzone(style="min-height:100px")
		.ui.large.header Fotos da Galeria
		if fotos
			if compare fotos.length 'gt' 0
				.ui.items
					each fotos
						.item
							.ui.small.image
								img(src="#{locationOrigin}/fotoDaGaleria/#{_id}")
							.content
								.description
								|#{originalname} #{galeria.capa_id}
								.extra
									.ui.blue.icon.button.capaBtn(data-tooltip="Capa da Galeria",data-inverted)
										i.image.icon
									.ui.red.icon.button.deleteBtn(data-tooltip="Excluir Foto",data-inverted)
										i.trash.icon
		else
			.ui.red.message Nenhuma foto encontrada nesta galeria
	else
		.ui.blue.message
			i.warning.icon
			span É necessário Salvar para poder fazer o Upload de Fotos na Galeria.
