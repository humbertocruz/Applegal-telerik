template(name="passwordResetView")
	.ui.container.three.column.centered.hidden.transition.grid#passwordResetGrid(style="height:100%;")
		.middle.aligned.row
			.left.aligned.column
				img.ui.small.centered.image(src="#{appLogoByDomain}")
				form.ui.form#passwordResetForm(method="post")
					.field
						label Nova Senha
						input#passwordField(type="text",name="password",placeholder="",autocomplete="off")
					.field
						label Repita a Senha
						input#password2Field(type="text",name="password2",placeholder="",autocomplete="off")
				.ui.divider
				button.ui.blue.big.fluid.button(type="submit",form="passwordResetForm") Recuperar Senha
				.ui.divider
				.ui.two.item.secondary.menu
					a.item(href="#{pathFor 'loginRoute'}") Fa√ßa o Login
