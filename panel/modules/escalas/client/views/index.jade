template(name="escalasView")
	+indexHeaderSearch header=header searchFields=searchFields newLink=newLink extraLinks=extraLinks
	table.ui.top.attached.table
		thead
			tr
				th.two.wide &nbsp;
				th.two.wide Data
				th.three.wide Servi√ßo
				th Arquivo
		tbody
			each escalas.data
				tr
					td
						a.ui.icon.button.editBtn(href="#{pathFor 'escalasUpdateRoute' id=_id}")
							i.edit.blue.icon
						.ui.icon.button.removeBtn
							i.trash.red.icon
