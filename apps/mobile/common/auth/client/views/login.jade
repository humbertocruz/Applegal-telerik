template(name="loginView")
	img.ui.small.centered.image(src="#{arquivoPath appInfo.appLogo 'c_scale,w_150'}")
	.ui.hidden.divider
	form.ui.form#loginForm(class="#{appThemeText}",style="background-color:#{appThemeBgColor}", method="post")
		if compare appInfo.loginType 'eq' 'username'
			.field
				label #{appInfo.loginTitle}
				input#usernameField(type="#{appInfo.loginTitleKeyboard}",name="username",autocomplete="off")
		else
			.field
				label Email
				input#emailField(type="email",name="email",autocomplete="off")
		.field
			label Senha
			.ui.action.input
				input#passwordField.hidePwd(type="#{appInfo.loginPasswordKeyboard}",name="password",autocomplete="off")
				.ui.icon.button.showPasswordBtn
					i.eye.icon
		.ui.divider
		button.ui.fluid.blue.button(type="submit",form="loginForm") Entrar
