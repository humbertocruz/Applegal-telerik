template(name="aplicativosFormView")
	+indexHeaderSearch header=header saveLink=saveLink
	form.ui.form#aplicativosForm(method="post")
		.ui.top.attached.tabular.menu
			.active.item(data-tab="info") Informações
			.item(data-tab="design") Aparência do App
			.item(data-tab="home") Home Page
			.item(data-tab="login") Login
			.item(data-tab="privacy") Privacidade
		.ui.bottom.attached.active.tab.segment(data-tab="info")
			.ui.grid
				.three.wide.column
					.field
						label Logotipo
						.ui.small.rounded.image
							img.ui.image(src="#{arquivoPath appInfo.appLogo}")
				.thirteen.wide.column
					.two.fields
						.field
							label Nome
							input#nameField(type="text",name="name")
						.field
							label APP ID (Google Play e Apple Store)
							input#appInfoIdField(type="text",name="appInfoId",placeholder="br.com.dominio.nome")
					.three.fields
						.field
							label Email
							input#emailField(type="text",name="mailFrom")
						.field
							label Domínio Opcional
							input#domainField(type="text",name="domain",placeholder="https://site.com.br")
						.field
							label Quantidade Paginação
							input#itemsPerPageField(type="number",name="itemsPerPage")
			.ui.eight.cards
				if ready
					each logotipos.data
						.ui.card(class="#{isLogoSelected}")
							.image
								img.ui.tiny.image.logoSelectEvent(src="#{CloudinaryBaseURL public_id 'c_scale,w_150'}")
							.extra
								.ui.blue.icon.button.logoSelectEvent
									i.checkmark.icon
			.ui.divider
			.field
				.ui.buttons
					.ui.icon.button#logoDownEvent
						i.chevron.left.icon
					.ui.icon.button#logoUpEvent
						i.chevron.right.icon

		.ui.bottom.attached.tab.segment(data-tab="design")
			.two.fields
				.field
					label Cor de Fundo do Cabeçalho
					select.ui.search.dropdown#headerField(name="headerBackgroundColor")
						option(value="") Escolha uma Cor
						each semanticColors
							option(value="#{className}") #{title}
				.field
					label Transparência dos Menus
					select.ui.search.dropdown#headersOpacityField(name="headersOpacity")
						option(value="") Escolha uma opção
						option(value="0") 100%
						option(value=".1") 90%
						option(value=".2") 80%
						option(value=".3") 70%
						option(value=".4") 60%
						option(value=".5") 50%
						option(value=".6") 40%
						option(value=".7") 30%
						option(value=".8") 20%
						option(value=".9") 10%
						option(value="1") 0%
			.two.fields
				.field
					label Cor de Fundo do Menu Lateral
					select.ui.search.dropdown#sidebarField(name="sidebarBackgroundColor")
						option(value="") Escolha uma Cor
						each semanticColors
							option(value="#{className}") #{title}
				.field
					label Tema
					select.ui.search.dropdown#themeField(name="theme")
						option(value="") Escolha o Tema
						option(value="lighten") Claro
						option(value="darken") Escuro
			.field
				label Imagem de Fundo
			.ui.top.attached.tabular.menu
				.active.item(data-tab="bgChoose") Galerias
				.item(data-tab="bgUploaded") Enviadas
			.ui.bottom.attached.tab.active.segment(data-tab="bgChoose")
				.ui.eight.cards
					if ready
						each wallpapers.data
							.ui.card(class="#{isBgSelected}")
								.image
									img.ui.bgSelectEvent(src="#{CloudinaryBaseURL public_id 'c_scale,w_180'}")
								.extra
									.ui.blue.icon.button.bgSelectEvent
										i.checkmark.icon
				.ui.divider
				.field
					.ui.buttons
						.ui.icon.button#bgDownEvent
							i.chevron.left.icon
						.ui.icon.button#bgUpEvent
							i.chevron.right.icon
			.ui.bottom.attached.tab.segment(data-tab="bgUploaded")
				.ui.eight.cards
					if ready
						each wallpapersUp.data
							.ui.card(class="#{isBgSelected}")
								.image
									img.bgSelectEvent(src="#{CloudinaryBaseURL public_id 'c_scale,w_180'}")
								.extra
									.ui.blue.icon.button.bgSelectEvent
										i.checkmark.icon
		.ui.bottom.attached.tab.segment(data-tab="home")
			.three.fields
				.field
					label Quantidade por Linha
					select.ui.search.dropdown#iconQuantityField(name="iconQuantity")
						option(value="") Escolha uma opção
						option(value="two") Dois Por Linha
						option(value="three") Três Por Linha
						option(value="four") Quatro Por Linha
				.field
					label Cor dos Ícones
					select.ui.search.dropdown#iconColorField(name="iconColor")
						option(value="") Escolha uma Cor
						each semanticColors
							option(value="#{className}") #{title}
				.field
					label Transparência dos Icones
					select.ui.search.dropdown#iconOpacityField(name="iconOpacity")
						option(value="") Escolha a Opacidade do ícone
						option(value="0") 100%
						option(value=".1") 90%
						option(value=".2") 80%
						option(value=".3") 70%
						option(value=".4") 60%
						option(value=".5") 50%
						option(value=".6") 40%
						option(value=".7") 30%
						option(value=".8") 20%
						option(value=".9") 10%
						option(value="1") 0%
			.two.fields
				.field
					label Tipo dos Ícones
					select.ui.search.dropdown#iconTypeField(name="iconType")
						option(value="") Escolha um Tipo
						option(value="circular") Circular
						option(value="bordered") Quadrado
				.field
					label Animação dos Ícones
					select.ui.search.dropdown#iconAnimationField(name="iconAnimation")
						option(value="") Escolha a Animação
						option(value="fade") Aparecer
						option(value="drop") Cair
						option(value="horizontal flip") Girar
						option(value="scale") Aumentar
						option(value="fly right") Voar à Direita
			.two.fields
				.field
					label Duração da Animação
					input#iconDurationField(type="number",name="iconDuration")
				.field
					label Intervalo entre as Animações
					input#iconIntervalField(type="number",name="iconInterval")
		.ui.bottom.attached.tab.segment(data-tab="login")
			.field
				label Tipo de Login
				select.ui.search.dropdown#loginTypeField(name="loginType")
					option(value="") Escolha uma opção
					option(value="email") Email
					option(value="username") Username
			.two.fields
				.field
					label Título
					input#loginTitleField(type="text",name="loginTitle")
				.field
					label Máscara do Título
					input#loginTitleMaskField(type="text",name="loginTitleMask")
			.field
				label Máscara da Senha
				input#loginPasswordMaskField(type="text",name="loginPasswordMask")
		.ui.bottom.attached.tab.segment(data-tab="privacy")
			.field
				label Privacidade
				textarea#privacyField(name="privacy",rows="15")
					|<p>Pol&iacute;tica de Privacidade</p>
					|<p>- O aplicativo poder&aacute; detectar o n&uacute;mero do celular em uso para controle de acesso de usu&aacute;rios</p>
					|<p>- As informa&ccedil;&otilde;es do us&aacute;rios fornecidas no aplicativo n&atilde;o ser&atilde;o compartilhadas com terceiros com excess&ccedil;&atilde;o:</p>
					|<p>- O preenchimento do Anivers&aacute;rio aparecer&aacute; para outros usu&aacute;rios</p>
					|<p>- O aplicativo detecta a posi&ccedil;&atilde;o atual do usu&aacute;rio via GPS para posicionamento das informa&ccedil;&otilde;es mas n&atilde;o salva essa informa&ccedil;&atilde;o</p>
