template(name="leftEmulatorApp")
	.ui.header #{appInfo.name}
	if isManagerOrAdmin
		.ui.blue.vertical.fluid.inverted.menu
			if aplicativoId
				a.item(class="#{isActiveRoute regex='^aplicativosArquivos'}",href="#{pathFor 'aplicativosArquivosRoute' aplicativoId=appInfo._id}")
					i.file.icon
					.content
						.header Arquivos
				a.item(class="#{isActiveRoute regex='^aplicativosUpdate'}",href="#{pathFor 'aplicativosUpdateRoute' aplicativoId=appInfo._id}")
					i.setting.icon
					.content
						.header Configuração
				if isAdmin
					a.item(class="#{isActiveRoute regex='^aplicativosModulos'}",href="#{pathFor 'aplicativosModulosRoute' aplicativoId=appInfo._id}")
						i.puzzle.icon
						.content
							.header Módulos
				a.item(class="#{isActiveRoute regex='^aplicativosUsuarios'}",href="#{pathFor 'aplicativosUsuariosRoute' aplicativoId=appInfo._id}")
					i.users.icon
					.content
						.header Usuários
			else
				a.item(href="#{pathFor 'aplicativosInsertRoute'}")
					i.setting.icon
					.content
						.header Configuração
	.ui.basic.center.aligned.segment
		iframe(src="/aplicativos/#{appInfo._id}/emulator",style="border:2px solid #000;width:320px;height:560px;")
