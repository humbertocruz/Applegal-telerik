template(name="noticiasAssuntosView")
	table.ui.blue.top.attached.table
		thead
			tr
				th.three.wide &nbsp;
				th Nome
		tbody
			each assuntos.data
				tr
					td
						a.ui.icon.button.editBtn(href="#{pathFor 'noticiasAssuntosUpdateRoute' aplicativoId=aplicativoId id=_id}")
							i.edit.icon
						.ui.icon.button.removeBtn
							i.trash.icon
					td #{name}
	.ui.secondary.bottom.attached.segment
		a.ui.blue.button(href="#{pathFor 'noticiasAssuntosInsertRoute' aplicativoId=appInfo._id}") Novo Assunto
		a.ui.button(href="#{pathFor 'noticiasRoute' aplicativoId=appInfo._id}") Not√≠cias
