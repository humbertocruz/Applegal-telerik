template(name="noticiasDetalheView")
	.ui.segment(class="#{appThemeText}",style="background-color:#{appThemeBgColor}")
		.ui.left.floated.header #{noticia.title}
		a.ui.blue.mini.right.floated.icon.button(href="#{pathFor 'noticiasRoute'}")
			i.chevron.left.icon
		.ui.clearing.divider
		if noticia.imagem
			img.ui.fluid.image(src="#{arquivoPath noticia.imagem}")
		.ui.divider
		p(style="background-color:transparent !important;") !{noticia.mensagem}
