template(name="adminsFormView")
	+indexHeaderSearch header=header saveLink=saveLink extraLinks=extraLinks
	form.ui.form#usuariosForm(method="post",novalidate="novalidate")
		unless isNew
			.two.fields
				.field
					label Usuário ou CPF
					input#usernameField(type="text",name="username")
				.field
					label Email
					input#emailField(type="text",name="email")
			.two.fields
				.field
					label Senha
					input.hidePwd#password1Field(type="text",name="password1")
				.field
					label Repita a Senha
					input.hidePwd#password2Field(type="text",name="password2")
		.three.fields
			.field
				label Nome
				input#nomeField(type="text",name="nome")
			.field
				label Aniversário
				input#aniversarioField(type="date",name="birth")
			.field
				label Telefone
				input#phoneField(type="text",name="phone",placeholder="(61) 99999-9999")
