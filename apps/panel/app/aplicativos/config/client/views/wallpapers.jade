template(name="pubWallpapersView")
	if compare galeria.pages 'gt' 1
		.ui.right.floated.buttons
			.ui.icon.button#prevPageEvent
				i.left.arrow.icon
			.ui.disabled.button #{biblioteca.page} de #{biblioteca.pages}
			.ui.icon.button#nextPageEvent
				i.right.arrow.icon
	.ui.clearing.divider
	.ui.six.cards
		each galeria.data
			.ui.card
				.image
					img(src="#{clUrl public_id crop='scale' width=210 cloud_name=cloud_name}")
				.content
					|!{toSemanticList tags}
				.extra.content
					i.link.large.mobile.icon.useOnAppEvent
