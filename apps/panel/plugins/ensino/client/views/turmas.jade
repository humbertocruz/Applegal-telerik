template(name="ensinoTurmasView")
	table.ui.blue.top.attached.single.line.table
		thead
			tr
				th.two.wide
				th Nome
		tbody
			each turmas
				tr
					td
						a.ui.blue.icon.button(href="#{pathFor 'ensinoTurmasUpdateRoute' cursoId=curso._id turmaId=_id aplicativoId=appInfo._id}")
							i.pencil.icon
						a.ui.icon.button(href="#{pathFor 'ensinoAlunosRoute' aplicativoId=appInfo._id turmaId=_id}")
							i.right.arrow.icon
					td #{name}
	.ui.bottom.attached.secondary.segment
		a.ui.blue.button(href="#{pathFor 'ensinoTurmasInsertRoute' aplicativoId=appInfo._id cursoId=curso._id}")
			i.add.icon
			|Nova Turma
		a.ui.button(href="#{pathFor 'ensinoRoute' aplicativoId=appInfo._id}")
			i.left.arrow.icon
			|Cursos
