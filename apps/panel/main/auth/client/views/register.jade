template(name="registerView")
	.ui.container.two.column.centered.hidden.transition.grid#registerGrid(style="height:100%;")
		.middle.aligned.row
			.left.aligned.column
				img.ui.small.centered.image(src="#{clUrl appLogoByDomain crop='scale' width=150}")
				.ui.info.message
					p Estamos em período de testes. Todos os dados e inscrições serão apagados em breve.
				form.ui.form#registerForm(method="post")
					.two.fields
						.field
							label Nome
							input#nameField(type="text",name="name",placeholder="Digite seu Nome",autocomplete="off")
						.field
							label Email
							input#emailField(type="text",name="email",placeholder="Digite seu Email",autocomplete="off")
					.two.fields
						.field
							label CPF
							input#usernameField(type="text",name="username",placeholder="Digite seu CPF",autocomplete="off")
						.field
							label Aniversário
							input#birthField(type="date",name="birth",placeholder="Digite a data do seu aniversário",autocomplete="off")
					.two.fields
						.field
								label Senha
								input#passwordField(type="password",name="password",placeholder="Digite sua senha",autocomplete="off")
						.field
							label Repita a Senha
							input#password2Field(type="password",name="password2",placeholder="Repita a sua senha",autocomplete="off")
				.ui.divider
				button.ui.blue.big.fluid.button(type="submit",form="registerForm") Cadastrar-se
				.ui.divider
				.ui.two.item.secondary.menu
					a.item(href="#{pathFor 'passwordRoute'}") Esqueceu sua senha ?
					a.item(href="#{pathFor 'loginRoute'}") Faça o Login
