template(name="adminsView")
	table.ui.blue.top.attached.single.line.table
		thead
			tr
				th.three.wide &nbsp;
				th.three.wide Email
				th Nome
		tbody
			unless Template.subscriptionsReady
				tr
					td(colspan="3")
						+loadingView
			else
				each admins.data
					tr
						td
							a.ui.icon.button.editBtn(href="#{pathFor 'adminsUpdateRoute' id=_id}",data-tooltip="Editar Admin",data-inverted)
								i.pencil.icon
							a.ui.icon.button.chamadoBtn(data-tooltip="Abrir Chamado",data-inverted)
								i.talk.icon
							.ui.icon.button.removeBtn(data-tooltip="Excluir Admin",data-inverted)
								i.trash.icon
						td #{firstEmail emails}
						td #{profile.name}
	.ui.secondary.bottom.attached.segment
		a.ui.blue.button(href="#{pathFor 'adminsInsertRoute'}")
			i.plus.icon
			|Novo Administrador
