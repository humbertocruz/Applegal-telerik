template(name="appMenu")
	if isManagerOrAdmin
		.ui.link.list
			if aplicativoId
				a.item(href="#{pathFor 'aplicativosUpdateRoute' aplicativoId=appInfo._id}")
					i.setting.icon
					.content
						.header Configuração
				a.item(href="#{pathFor 'aplicativosModulosRoute' aplicativoId=appInfo._id}")
					i.puzzle.icon
					.content
						.header Módulos
				a.item(href="#{pathFor 'aplicativosUsuariosRoute' aplicativoId=appInfo._id}")
					i.users.icon
					.content
						.header Usuários
			else

				a.item(href="#{pathFor 'aplicativosInsertRoute'}")
					i.setting.icon
					.content
						.header Configuração
		.ui.divider
	if appModulos
		.ui.link.list
			each appModulos
				if userHasPerm modulo.path
					a.item(href="#{pathFor modulo.route aplicativoId=appInfo._id}")
						i.icon(class="#{icon}")
						.content
							.header #{title}
