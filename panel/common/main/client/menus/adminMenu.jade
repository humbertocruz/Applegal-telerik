template(name="adminMenu")
	.ui.blue.mini.inverted.top.fixed.labeled.icon.menu#adminMenu
		a.item(class="#{isActiveRoute regex='^home'}",href="#{pathFor 'homeRoute'}")
			i.home.icon
			|Home
		.right.menu
			if isInRole 'admin'
				a.item(class="#{isActiveRoute regex='^aplicativos'}",href="#{pathFor 'aplicativosRoute'}")
					i.android.icon
					|Aplicativos
				a.item(class="#{isActiveRoute regex='^modulos'}",href="#{pathFor 'modulosRoute'}")
					i.puzzle.icon
					|MÃ³dulos
			if userId
				a.item(href="#{pathFor 'profileRoute'}")
					i.sign.out.icon
					|#{user.profile.name}
			else
				a.item(href="#{pathFor 'loginRoute'}")
					i.sign.in.icon
					|Entrar
